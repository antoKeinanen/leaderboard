generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String  @id @default(cuid())
  username     String  @unique
  passwordHash String
  accessToken  String
  entries      Entry[]
}

enum Gamemode {
  MINESWEEPER_EASY
  MINESWEEPER_MEDIUM
  MINESWEEPER_HARD
}

model Entry {
  id       String   @id @default(cuid())
  User     User?    @relation(fields: [userId], references: [id])
  userId   String?
  gamemode Gamemode
}
